FROM python:3.11-slim

ENV PYTHONDONTWRITEBYTECODE=1 \
    PYTHONUNBUFFERED=1

WORKDIR /app

COPY requirements.txt ./
RUN pip install --no-cache-dir -r requirements.txt

COPY strategy ./strategy
COPY docs ./docs

EXPOSE 8100
CMD ["uvicorn", "strategy.app:app", "--host", "0.0.0.0", "--port", "8100"]
